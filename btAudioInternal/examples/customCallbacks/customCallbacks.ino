void setup() {
 
 // streams audio data to the ESP32   
 audio.begin();
 
 //  outputs the received data to an I2S DAC https://www.adafruit.com/product/3678
 int bck = 26; 
 int ws = 27;
 int dout = 25;
 audio.I2S(bck, dout, ws);
}

void loop() {
delay(5000);
audio.setSinkCallback(bt_data_cb1);
delay(5000);
audio.setSinkCallback(bt_data_cb2);

}
